@model BookManagement.Core.Models.Book

@using BookManagement.Core.Models
@{
    ViewBag.Title = "Create";
    List<Category> categories = ViewBag.Categories as List<Category>; 
}
<div class="maincontent">
    <h2>Create</h2>

    @using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Book</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Author)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Author)
                @Html.ValidationMessageFor(model => model.Author)
            </div>

            <div class="editor-label">
                @Html.Label("Category")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Category.Name,
                new SelectList(categories, "Name", "Name"), "--Select Category--")
                @Html.ValidationMessageFor(model => model.Category.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Price)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.PathImage)
            </div>
            <div class="editor-field">
                
                
                <input id="chooseImg" type="file" name="PathImage" />

                @Html.ValidationMessageFor(model => model.PathImage)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Overview)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Overview)
                @Html.ValidationMessageFor(model => model.Overview)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

