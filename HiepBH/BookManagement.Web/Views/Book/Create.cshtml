@model BookManagement.Core.Models.Book

@using BookManagement.Core.Models
@{
    ViewBag.Title = "Create";
    List<Category> categories = ViewBag.Categories as List<Category>; 
}

<div class="maincontent">
    <p class="title">New Book</p>

    @using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <div class="divleft">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Author)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Author)
                @Html.ValidationMessageFor(model => model.Author)
            </div>

            <div class="editor-label">
                @Html.Label("Category")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Category.Name,
                new SelectList(categories, "Name", "Name"), "--Select Category--")
                @Html.ValidationMessageFor(model => model.Category.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Price) ($)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>

            <div class="editor-label">
                @Html.Label("Image")
            </div>
            <div class="editor-field">
                <input id="chooseImg" type="file" name="PathImage" />
                @Html.ValidationMessageFor(model => model.PathImage)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>

            <div class="button">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    <div class="divright">
        <div class="editor-label">
            @Html.LabelFor(model => model.Overview)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Overview, new { id = "boxoverview" })
            @Html.ValidationMessageFor(model => model.Overview)
        </div>
    </div>
        
        
        
    }


</div>

